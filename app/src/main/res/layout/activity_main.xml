<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingRight="30dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:text=""
        android:layout_gravity="end"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        android:id="@+id/workingsTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:paddingRight="30dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:text=""
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:textSize="45sp"
        android:id="@+id/resultTextView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/numbertextsize"
            android:onClick="OneOnClick"
            />
        <Button
            android:id="@+id/button2"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="@dimen/numbertextsize"
            android:onClick="TwoOnClick"
            />
        <Button
            android:id="@+id/button3"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="@dimen/numbertextsize"
            android:onClick="ThreeOnClick"
            />
        <Button
            android:id="@+id/buttonPlus"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="@dimen/numbertextsize"
            android:onClick="PlusOnClick"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="@dimen/numbertextsize"
            android:onClick="FourOnClick"
            />
        <Button
            android:id="@+id/button5"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="@dimen/numbertextsize"
            android:onClick="FiveOnClick"

            />
        <Button
            android:id="@+id/button6"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="@dimen/numbertextsize"
            android:onClick="SixOnClick"
            />
        <Button
            android:id="@+id/buttonMinus"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="@dimen/numbertextsize"
            android:onClick="MinusOnClick"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="@dimen/numbertextsize"
            android:onClick="SevenOnClick"
            />
        <Button
            android:id="@+id/button8"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="@dimen/numbertextsize"
            android:onClick="EightOnClick"
            />
        <Button
            android:id="@+id/button9"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="@dimen/numbertextsize"
            android:onClick="NineOnClick"
            />
        <Button
            android:id="@+id/buttonEquals"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="@dimen/numbertextsize"
            android:onClick="EqualOnClick"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonblank1"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/numbertextsize"
            />
        <Button
            android:id="@+id/button0"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/numbertextsize"
            android:onClick="ZeroOnClick"
            />
        <Button
            android:id="@+id/buttonblank2"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/numbertextsize"/>

        <Button
            android:id="@+id/buttonClear"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="@dimen/numbertextsize"
            android:onClick="ClearOnClick"
            />

    </LinearLayout>




</LinearLayout>



